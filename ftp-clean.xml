<project name="FtpUpload" default="upload" basedir=".">
  <description>Uploads build results to the server</description>
    
  <target name="upload">

	  <ftp passive="yes" action="delete" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="/html">
 	    <fileset defaultexcludes="false">
              <include name="**"/>
            </fileset>
          </ftp>

	  <ftp passive="yes" action="rmdir" server="${ftp.server}" userid="${ftp.user}" password="${ftp.password}" remotedir="/html">
 	    <fileset defaultexcludes="false">
              <include name="**"/>
            </fileset>
          </ftp>
  </target>
</project>
